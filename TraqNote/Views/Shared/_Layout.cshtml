            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>*@

                @if (!User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    <li>@Html.ActionLink("Reset Password", "ForgotPassword")</li>
                    @*<li>@Html.ActionLink("Login", "Login", "Account")</li>*@
                }
                else
                {
                    @*<li>@Html.ActionLink("Admin", "Index", "Home", new { Area = "Admin" }, "")</li>
                    <li>@Html.ActionLink("Sale", "Index", "Home", new { Area = "Sale" }, "")</li>*@
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Logout", "LogOff", "Account")</li>
                }

            </div>
            @*<div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
